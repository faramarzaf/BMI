<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is English and metric system ?"
        android:textSize="@dimen/_18sdp"
        android:textColor="#000"
        android:textStyle="bold"

        />

    <View
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/bg_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body mass index can be calculated using pounds and inches with this system.(English system)"
        android:textSize="@dimen/_17sdp"
        android:textColor="#000"
        android:layout_marginTop="@dimen/_15sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body mass index can also be calculated using kilograms and centimeters with this system.\n(Metric system)"
        android:textSize="@dimen/_17sdp"
        android:textColor="#000"
        android:layout_marginTop="@dimen/_15sdp"
        />


</LinearLayout>